<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/md_white_1000" />
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="80%"
            android:pivotY="20%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/md_blue_900" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="80%"
            android:pivotY="100%"
            android:toDegrees="0">
            <shape android:shape="rectangle">
                <solid android:color="@color/md_amber_500" />
            </shape>
        </rotate>
    </item>
</layer-list>